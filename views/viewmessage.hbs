<!-- views/viewmessages.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Messages for {{parentName}}</title>
  <link rel="stylesheet" href="/contactparent.css" />
</head>
<body>
  <div class="container">
    <h2>Messages for {{parentName}}</h2>

    {{#if messages.length}}
      <ul>
        {{#each messages}}
          <li class="message-item">
            <strong>Student:</strong> {{this.student_name}}<br />
            <strong>Message:</strong> {{this.message}}<br />
            <em>Sent at: {{this.timestamp}}</em>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No messages found.</p>
    {{/if}}

    <div class="back-link">
      <a href="/">← Back to Home</a>
    </div>
  </div>
</body>
</html>
