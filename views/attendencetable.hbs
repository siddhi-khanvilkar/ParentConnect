<!DOCTYPE html>
<html>
<head>
  <title>Attendance Table</title>
  <style>
    table { border-collapse: collapse; width: 100%; margin-bottom: 15px; }
    th, td { border: 1px solid #333; padding: 8px; text-align: center; }
    th { background-color: #eee; }
    .message { margin-top: 15px; font-weight: bold; color: green; }
    .error { color: red; }
  </style>
</head>
<body>
  <h2>Attendance for {{month}} {{year}}</h2>

  <form action="/auth/save" method="POST" id="attendanceForm">

    <input type="hidden" name="month" value="{{month}}">
    <input type="hidden" name="year" value="{{year}}">
    <input type="hidden" name="working_days" value="{{working_days}}" id="workingDays">

    <table>
      <thead>
        <tr>
          <th>Student ID</th>
          <th>Name</th>
          <th>Roll No</th>
          <th>Class</th>
          <th>Present Days</th>
        </tr>
      </thead>
      <tbody>
        {{#each students}}
        <tr>
          <td>{{this.student_id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.rollno}}</td>
          <td>{{this.class}}</td>
          <td>
            <input
              type="number"
              name="attendance[{{this.student_id}}]"
              min="0"
              max="{{../working_days}}"
              required
              class="presentDaysInput"
            >
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <button type="submit">Save Attendance</button>
  </form>

  {{#if message}}
    <div class="message">{{message}}</div>
  {{/if}}

  <script>
    const workingDays = parseInt(document.getElementById('workingDays').value, 10);
    document.querySelectorAll('.presentDaysInput').forEach(input => {
      input.addEventListener('input', function () {
        let val = parseInt(this.value, 10);
        if (val > workingDays) {
          alert(`Present days cannot exceed working days (${workingDays}).`);
          this.value = workingDays;
        } else if (val < 0 || isNaN(val)) {
          this.value = 0;
        }
      });
    });
  </script>
</body>
</html>
